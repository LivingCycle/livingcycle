{
  "name": "livingcycle",
  "version": "0.1.0",
  "description": "Daily life organization assistant - Structure, routines, and resource connections",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "deploy": "npm run build && npm run worker:deploy",
    "deploy:staging": "npm run build && npx wrangler deploy --env staging",
    "worker:dev": "npx wrangler dev",
    "worker:deploy": "npx wrangler deploy"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@inrupt/solid-client": "^1.30.2",
    "@inrupt/solid-client-authn-browser": "^1.17.5",
    "@solidjs/router": "^0.10.5",
    "idb": "^8.0.0",
    "solid-js": "^1.8.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "eslint-plugin-solid": "^0.13.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-solid": "^2.8.2",
    "vitest": "^1.2.1",
    "workbox-window": "^7.0.0",
    "wrangler": "^4.30.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LivingCycle/livingcycle.git"
  },
  "keywords": [
    "life-organization",
    "daily-routines",
    "pwa",
    "offline-first",
    "solid-pods",
    "privacy-first"
  ],
  "author": "LivingCycle Contributors - Built with Claude",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/LivingCycle/livingcycle/issues"
  },
  "homepage": "https://github.com/LivingCycle/livingcycle#readme"
}
